        username: 49e0ba10-d1e6-4686-bbb1-fbe4e59490b0
        password: UlNQKxF8ywcrfuZWLeTvbGEGmyGBbU6Fq-
        
    
    - name: Build the Docker image
      run: |
        cd src/adservice/
        docker build -t hipstershopimg.azurecr.io/adservice:v1 .
